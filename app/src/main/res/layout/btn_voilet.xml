<?xml version="1.0" encoding="utf-8"?>
<selector
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape
            android:shape="oval">
            <solid
                android:color="#FF1F70A5" />
            <stroke
                android:width="2dp"
                android:color="#222" />
            <corners
                android:bottomRightRadius="0dip"
                android:bottomLeftRadius="0dip"
                android:topRightRadius="0dip"
                android:topLeftRadius="0dip"/>
            <padding
                android:left="20dp"
                android:right="20dp"
                android:top="15dp"
                android:bottom="15dp" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval">
            <corners
                android:bottomRightRadius="0dip"
                android:bottomLeftRadius="0dip"
                android:topRightRadius="0dip"
                android:topLeftRadius="0dip"/>
            <stroke
                android:width="1dp"
                android:color="#222" />
            <solid
                android:color="#441F70A5" />
        </shape>
    </item>
</selector>